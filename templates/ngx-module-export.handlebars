import { {{#unless options.skipGuards}}{{&serviceName}}, {{/unless}}USE_DOMAIN, USE_HTTP_OPTIONS } from './{{&serviceFileName}}';{{#unless options.skipGuards}}
import { Guarded{{&serviceName}} } from './guarded-{{&serviceFileName}}';{{/unless}}
